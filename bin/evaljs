#!/usr/bin/env node

var repl = require('repl');
var evaljs = require('../');
var parse = require('acorn').parse;
var fs = require('fs');
var env = new evaljs.Environment([global, {require: require}]);

repl.start({
  eval: function (cmd, context, filename, callback) {
    try {
      callback(null, env.gen(cmd)())
    } catch (err) {
      callback(err);
    };
  }
});
